stream {
    upstream kubernetes {
{% for host in groups['control-plane-nodes'] %}        server {{ host }}:6443;
{% endfor %}
    }

    server {
        listen 6443 ssl;
        listen 443 ssl;
        proxy_pass kubernetes;

        ssl_certificate /etc/ssl/certs/kubernetes.pem;
        ssl_certificate_key /etc/ssl/certs/kubernetes-key.pem;
    }
}

http {
    server {
        listen 80 default_server;

        location = /health {
            access_log off;
            add_header 'Content-Type' 'application/json';
            return 200 '{"status":"UP"}';
        }
    }
}
