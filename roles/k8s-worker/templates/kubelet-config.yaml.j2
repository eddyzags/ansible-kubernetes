kind: KubeletConfiguration
apiVersion: kubelet.config.k8s.io/v1beta1
authentication:
  anonymous:
    enabled: false
  webhook:
    enabled: true
  x509:
    clientCAFile: "/var/lib/kubernetes/ca.pem"
authorization:
  mode: Webhook
clusterDomain: "cluster.local"
clusterDNS:
  - "{{ cluster_dns_ip }}"
podCIDR: "{{ cluster_cidr }}"
resolvConf: "/etc/resolv.conf"
runtimeRequestTimeout: "15m"
tlsCertFile: "/var/lib/kubernetes/kubelet/worker-{{ host_index }}.pem"
tlsPrivateKeyFile: "/var/lib/kubernetes/kubelet/worker-{{ host_index }}-key.pem"
cgroupDriver: "systemd"
registerNode: true
